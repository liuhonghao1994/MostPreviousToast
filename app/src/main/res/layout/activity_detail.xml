<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_detail"
    tools:context="com.example.lhonghao.mostprevioustoast.DetailActivity">
    <LinearLayout
        android:id="@+id/ly_fir"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">
        <ImageView
            android:src="@drawable/anim_heart"
            android:id="@+id/iv_showdetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tv_showdetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="你好"
            android:textSize="30sp"/>
    </LinearLayout>
   <LinearLayout
       android:orientation="horizontal"
       android:id="@+id/ly_sec"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true">
       <Button
           android:textSize="20sp"
           android:gravity="center"
           android:text="购物车"
           android:id="@+id/btn_shopping_cart"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"/>
       <Button
           android:textSize="20sp"
           android:gravity="center"
           android:text="添加到购物车"
           android:id="@+id/btn_add_shopping_cart"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"/>
   </LinearLayout>
</RelativeLayout>
